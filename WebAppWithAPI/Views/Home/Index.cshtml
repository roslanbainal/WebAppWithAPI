@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <br />
    <div style="width:90%; margin:0 auto;">
        <table id="poskodTable" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>Poskod</th>
                    <th>Bandar</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
<script>
    ﻿$(document).ready(function () {
        $("#poskodTable").DataTable({
            "processing": true, //show processing when request new data
            "serverSide": true, // allow request from server
            "bLengthChange": false, //hide length dropdown
            "searching" : false, //hide searching input
            "ajax": {
                "url": "/Home/GetPoskod",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [
                { "bSortable": false ,"targets": [0]}, //hide sorting by column
                { "bSortable": false ,"targets": [1]}
            ],
            "columns": [ //add data to each column
                { "data": "poskod", "name": "Poskod", "autoWidth": true }, 
                { "data": "bandar", "name": "Bandar", "autoWidth": true },
            ]
        });
    });
</script>
}
